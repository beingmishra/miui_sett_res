<?xml version="1.0" encoding="utf-8"?>
<layer-list
    android:paddingTop="@dimen/preference_category_gap_height"
    android:paddingStart="@dimen/preference_item_padding_start"
    android:paddingEnd="@dimen/preference_item_padding_end"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/white" />
            <size
                android:height="@dimen/preference_category_height" />
        </shape>
    </item>
    <item
        android:gravity="top"
        android:left="@dimen/preference_item_padding_start"
        android:top="@dimen/preference_category_divider_gap_height"
        android:right="@dimen/preference_item_padding_end"
        android:bottom="@dimen/preference_category_divider_gap_height">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/preference_first_last_divider_line_light" />
            <size
                android:height="0.70000005dip" />
        </shape>
    </item>
</layer-list>