<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/usage_stats_white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="58.179993dip"
    android:paddingStart="29.089996dip"
    android:paddingEnd="29.089996dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/iv_app_icon"
        android:layout_width="@dimen/usage_state_item_image_wh"
        android:layout_height="@dimen/usage_state_item_image_wh"
        android:scaleType="fitCenter" />
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/id_name_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_marginStart="@dimen/usage_list_item_name_left">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:clipChildren="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/usage_state_item_app_name_text_size"
                android:textColor="@color/usage_state_black"
                android:ellipsize="end"
                android:id="@id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1" />
            <ImageView
                android:id="@id/iv_limit_tag"
                android:visibility="visible"
                android:layout_width="14.199982dip"
                android:layout_height="14.199982dip"
                android:src="@drawable/ic_limit_tag"
                android:layout_marginStart="7.1999817dip" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/usage_state_item_time_text_size"
        android:textColor="@color/usage_stats_black60"
        android:gravity="end"
        android:id="@id/tv_app_usage_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false" />
    <ImageView
        android:id="@id/id_iv_right_arrow"
        android:layout_marginStart="@dimen/usage_state_item_arrow_margin_left"
        style="@style/ArrowImg" />
</LinearLayout>