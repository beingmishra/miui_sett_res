<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textSize="@dimen/usage_focus_detail_date_text_size"
            android:textColor="@color/usage_stats_black90"
            android:id="@id/id_focus_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip" />
        <Space
            android:background="@android:color/transparent"
            android:layout_width="0.0dip"
            android:layout_height="1.0px"
            android:layout_weight="1.0" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/usage_focus_detail_time_text_size"
                android:textColor="@color/usage_stats_black30"
                android:id="@id/id_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/usage_focus_detail_time_text_size"
                android:textColor="@color/usage_stats_black30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
            <TextView
                android:textSize="@dimen/usage_focus_detail_time_text_size"
                android:textColor="@color/usage_stats_black30"
                android:id="@id/id_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Space
        android:background="@android:color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/usage_focus_detail_date_text_margin" />
</LinearLayout>