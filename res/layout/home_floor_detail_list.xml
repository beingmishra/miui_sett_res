<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/id_divide"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/usage_new_home_divide_container"
        android:layout_marginTop="14.539978dip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/home_floor_divide" />
    <TextView
        android:textSize="19.629974sp"
        android:textColor="@color/usage_stats_black90"
        android:id="@id/id_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0899963dip"
        android:text="@string/usage_new_home_day_usage_title"
        android:fontFamily="mipro-medium"
        android:textAlignment="viewStart"
        android:layout_marginStart="29.089996dip"
        app:layout_constraintEnd_toStartOf="@id/id_channel_container"
        app:layout_constraintHorizontal_weight="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_divide" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/id_channel_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/id_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/id_title">
        <TextView
            android:textSize="13.089996sp"
            android:textColor="@color/usage_new_home_list_channel_name_color"
            android:id="@id/id_channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usage_new_home_name"
            android:fontFamily="mipro-regular" />
        <ImageView
            android:id="@id/id_channel_icon"
            android:layout_width="8.0dip"
            android:layout_height="8.959991dip"
            android:src="@drawable/icon_list_channel"
            android:layout_marginStart="8.959991dip"
            android:layout_marginEnd="29.089996dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@id/id_list_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.269989dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_title" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/id_show_more"
        android:paddingTop="16.359985dip"
        android:paddingBottom="16.359985dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.699982dip"
        android:paddingStart="16.0dip"
        android:paddingEnd="16.0dip"
        android:layout_marginStart="13.089996dip"
        android:layout_marginEnd="13.089996dip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_list_container">
        <TextView
            android:textAppearance=""
            android:ellipsize="end"
            android:id="@id/tv_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/usage_new_home_show_more_data_title"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/id_iv_right_arrow1"
            app:layout_constraintHorizontal_weight="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:ellipsize="end"
            android:id="@id/tv_summary"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.4499817dip"
            android:text="@string/usage_new_home_show_more_data_summary"
            android:maxLines="1"
            android:layout_below="@id/tv_title"
            app:layout_constraintEnd_toStartOf="@id/id_iv_right_arrow1"
            app:layout_constraintHorizontal_weight="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            style="" />
        <ImageView
            android:id="@id/id_iv_right_arrow1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/ArrowImg" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>