<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/usage_stats_white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="58.179993dip"
    android:paddingStart="29.089996dip"
    android:paddingEnd="29.089996dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/id_icon"
        android:layout_width="@dimen/usage_new_home_item_icon_wh"
        android:layout_height="@dimen/usage_new_home_item_icon_wh"
        android:scaleType="fitCenter" />
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="13.089996dip">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13.089996sp"
                android:textColor="@color/usage_stats_black90"
                android:ellipsize="end"
                android:id="@id/id_usage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="mipro-medium" />
            <Space
                android:layout_width="0.0dip"
                android:layout_height="1.0px"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="13.089996sp"
                android:textColor="@color/usage_stats_black30"
                android:ellipsize="end"
                android:id="@id/id_usage_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="mipro-medium" />
        </LinearLayout>
        <com.xiaomi.misettings.usagestats.home.widget.TimeUsageRatioView
            android:id="@id/id_time_progress"
            android:layout_width="fill_parent"
            android:layout_height="8.0dip"
            android:layout_marginTop="5.0899963dip" />
    </LinearLayout>
</LinearLayout>