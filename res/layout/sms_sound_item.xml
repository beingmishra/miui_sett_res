<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    android:layout_width="fill_parent"
    android:layout_height="65.5dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="@dimen/coolsound_sms_img_height"
        android:layout_height="@dimen/coolsound_sms_img_height">
        <ImageView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@android:id/icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <TextView
            android:textAppearance=""
            android:textSize="16.699982sp"
            android:ellipsize="end"
            android:id="@android:id/title"
            android:fadingEdge="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/coolsound_sms_txt_padding" />
        <TextView
            android:textAppearance=""
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:layout_below="@android:id/title"
            android:layout_alignStart="@android:id/title" />
    </RelativeLayout>
    <TextView
        android:textAppearance=""
        android:ellipsize="marquee"
        android:gravity="end"
        android:id=""
        android:paddingTop="@dimen/preference_value_padding_top"
        android:paddingBottom="@dimen/preference_value_padding_bottom"
        android:fadingEdge="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/preference_value_max_width"
        android:maxLines="10"
        android:textDirection="locale" />
    <ImageView
        android:gravity="center"
        android:layout_gravity="end|center"
        android:id=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src=""
        android:layout_marginStart="@dimen/preference_item_padding_inner" />
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@android:id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:minWidth="" />
</LinearLayout>