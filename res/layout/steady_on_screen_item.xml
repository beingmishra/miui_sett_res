<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background=""
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/usage_item_height"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="@dimen/pref_icon_width"
        android:layout_height="@dimen/pref_icon_width"
        android:src="@drawable/ic_steady_on_screen"
        android:layout_marginEnd="11.699982dip" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">
        <TextView
            android:textAppearance=""
            android:ellipsize="end"
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steady_on_screen_notify"
            android:maxLines="2" />
        <TextView
            android:id="@id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/steady_on_screen_summary"
            style="" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
        <TextView
            android:textSize="@dimen/usage_state_remind_value_text_size"
            android:textColor="@color/usage_stats_black60"
            android:layout_gravity="end"
            android:id="@id/tv_work_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/usage_state_remind_value_text_size"
            android:textColor="@color/usage_stats_black60"
            android:layout_gravity="end"
            android:id="@id/tv_week_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.5499878dip" />
    </LinearLayout>
    <ImageView
        android:id="@id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src=""
        android:layout_marginStart="@dimen/usage_state_remind_item_arrow_margin_left" />
</LinearLayout>