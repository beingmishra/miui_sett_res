<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background=""
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/usage_item_height"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@id/id_item_icon"
        android:layout_width="@dimen/usage_state_item_image_wh"
        android:layout_height="@dimen/usage_state_item_image_wh"
        android:scaleType="fitXY" />
    <TextView
        android:textSize="@dimen/usage_state_item_app_name_text_size"
        android:textColor="@color/usage_state_black"
        android:id="@id/id_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/usage_state_item_image_margin_right" />
    <ImageView
        android:id="@id/id_item_tag"
        android:visibility="gone"
        android:layout_width="14.199982dip"
        android:layout_height="14.199982dip"
        android:src="@drawable/ic_limit_tag"
        android:layout_marginStart="7.1999817dip" />
    <View
        android:background="@android:color/transparent"
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        android:layout_weight="1.0" />
    <TextView
        android:textSize="@dimen/usage_state_item_time_text_size"
        android:textColor="@color/usage_stats_black60"
        android:gravity="end"
        android:id="@id/id_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src=""
        android:layout_marginStart="@dimen/usage_state_item_arrow_margin_left" />
</LinearLayout>