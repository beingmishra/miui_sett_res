<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background=""
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/usage_item_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/icon"
        android:layout_width="@dimen/pref_icon_width"
        android:layout_height="@dimen/pref_icon_width"
        android:src="@drawable/ic_focus_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textAppearance=""
        android:id="@id/tv_title"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/usage_state_focus_mode_title"
        android:layout_marginStart="11.699982dip"
        android:layout_marginEnd="@dimen/usage_state_remind_item_arrow_margin_left"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
    <TextView
        android:id="@id/tv_description"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:text="@string/usage_state_focus_mode_summary"
        android:layout_marginEnd="@dimen/usage_state_remind_item_arrow_margin_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_arrow"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        style="" />
    <ImageView
        android:id="@id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>